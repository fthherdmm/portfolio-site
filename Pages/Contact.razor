@page "/contact"
@using PortfolioSite.Models
@using PortfolioSite.Services
@inject Supabase.Client SupabaseClient
@inject LanguageService Lang
@implements IDisposable

<PageTitle>@Lang.Get("Contact_Title") | Muhammed Fatih Erdem</PageTitle>

<div class="container py-5">
    <div class="text-center mb-5 fade-in">
        <h1 class="fw-bold text-white display-5">@Lang.Get("Contact_Title")</h1>
        <p style="color: #cbd5e1; max-width: 600px; margin: 0 auto; font-size: 1.1rem;">
            @Lang.Get("Contact_Desc")
        </p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="row align-items-stretch">
                <div class="col-md-5 mb-4 mb-md-0">
                    <div class="info-card h-100 fade-in">
                        <h3 class="fw-bold text-white mb-4">@Lang.Get("Contact_Channels")</h3>
                        
                        <div class="d-flex flex-column gap-4">
                            <a href="mailto:mm.fatiherdem@gmail.com" class="contact-item">
                                <div class="icon-box">📧</div>
                                <div>
                                    <small class="text-white-50 d-block mb-1" style="font-weight: 600;">E-Mail</small>
                                    <span class="text-white">mm.fatiherdem@gmail.com</span>
                                </div>
                            </a>
                            
                            <a href="https://www.linkedin.com/in/fatih-erdem-89237823b/" target="_blank" class="contact-item">
                                <div class="icon-box" style="background: #0077b5;">in</div>
                                <div>
                                    <small class="text-white-50 d-block mb-1" style="font-weight: 600;">LinkedIn</small>
                                    <span class="text-white">/in/fatih-erdem-89237823b</span>
                                </div>
                            </a>
                            
                            <a href="https://github.com/fthherdmm" target="_blank" class="contact-item">
                                <div class="icon-box" style="background: #333;">git</div>
                                <div>
                                    <small class="text-white-50 d-block mb-1" style="font-weight: 600;">GitHub</small>
                                    <span class="text-white">@@fthherdmm</span>
                                </div>
                            </a>

                            <div class="mt-auto p-3 rounded" style="background: rgba(255,255,255,0.08); border: 1px dashed rgba(255,255,255,0.2);">
                                <small class="text-light">
                                    📍 @Lang.Get("Contact_Location")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-7">
                    <div class="contact-form-card h-100 fade-in">
                        @if (isSent)
                        {
                            <div class="success-message text-center h-100 d-flex flex-column justify-content-center align-items-center">
                                <div class="mb-3 display-1">🎉</div>
                                <h3 class="text-white">@Lang.Get("Msg_Success_Title")</h3>
                                <p style="color: #cbd5e1;">@Lang.Get("Msg_Success_Desc")</p>
                                <button class="btn btn-outline-light mt-4" @onclick="ResetForm">@Lang.Get("Msg_New_Btn")</button>
                            </div>
                        }
                        else
                        {
                            <h4 class="text-white mb-4">@Lang.Get("Form_Header")</h4>
                            
                            <div class="mb-3">
                                <label class="form-label text-white small fw-bold">@Lang.Get("Form_Name")</label>
                                <input type="text" class="form-control bg-dark text-white border-secondary py-2" 
                                       @bind="message.SenderName" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-white small fw-bold">@Lang.Get("Form_Email")</label>
                                <input type="email" class="form-control bg-dark text-white border-secondary py-2" 
                                       @bind="message.SenderEmail" />
                            </div>
                            <div class="mb-4">
                                <label class="form-label text-white small fw-bold">@Lang.Get("Form_Message")</label>
                                <textarea class="form-control bg-dark text-white border-secondary" rows="5" 
                                          @bind="message.MessageText"></textarea>
                            </div>
                            
                            <button class="btn w-100 btn-send py-3" @onclick="SendMessage" disabled="@isSending">
                                @if(isSending) { <span>@Lang.Get("Form_Btn_Sending")</span> } else { <span>@Lang.Get("Form_Btn_Send")</span> }
                            </button>
                            
                            @if(!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger mt-3 py-2 small">@errorMessage</div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* SOL KART TASARIMI */
    .info-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 1rem;
        padding: 2rem;
    }
    
    .contact-item {
        display: flex; align-items: center; gap: 15px;
        text-decoration: none; padding: 12px; border-radius: 12px;
        transition: 0.2s;
        border: 1px solid transparent;
    }
    .contact-item:hover { 
        background: rgba(255,255,255,0.08); 
        border-color: rgba(255,255,255,0.1);
    }

    .icon-box {
        width: 48px; height: 48px;
        background: var(--accent-blue);
        color: white; border-radius: 12px;
        display: flex; align-items: center; justify-content: center;
        font-size: 1.3rem; font-weight: bold;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }

    /* SAĞ FORM TASARIMI */
    .contact-form-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        padding: 2.5rem; border-radius: 1rem;
        box-shadow: 0 10px 40px -10px rgba(0,0,0,0.5);
    }

    .form-control:focus {
        background: var(--bg-card) !important;
        color: white !important;
        border-color: var(--accent-blue) !important;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
    }

    .btn-send {
        background: var(--accent-blue); color: white;
        border-radius: 8px; font-weight: 700; border: none; transition: 0.2s;
    }
    .btn-send:hover {
        background: #2563eb; transform: translateY(-2px);
        box-shadow: 0 10px 20px -5px rgba(37, 99, 235, 0.4); color: white;
    }
    .btn-send:disabled { opacity: 0.7; transform: none; cursor: not-allowed; }

    .fade-in { animation: fadeIn 0.5s ease-out; }
    @("@keyframes") fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>

@code {
    private ContactMessage message = new();
    private bool isSending = false;
    private bool isSent = false;
    private string errorMessage = "";

    // 1. Dil Değişimini Dinle
    protected override void OnInitialized()
    {
        Lang.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        Lang.OnChange -= StateHasChanged;
    }

    // 2. Mesaj Gönderme Mantığı (Düzeltildi)
    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(message.SenderName) || 
            string.IsNullOrWhiteSpace(message.SenderEmail) || 
            string.IsNullOrWhiteSpace(message.MessageText))
        {
            errorMessage = Lang.Get("Err_Required"); // Servisteki hata mesajı
            return;
        }

        isSending = true; 
        errorMessage = "";

        try
        {
            await SupabaseClient.From<ContactMessage>().Insert(message);
            isSent = true; 
            message = new(); 
        }
        catch (Exception ex) 
        { 
            errorMessage = "Hata: " + ex.Message; 
        }
        finally 
        { 
            isSending = false; 
        }
    }

    private void ResetForm() 
    { 
        isSent = false; 
        errorMessage = ""; 
    }
}